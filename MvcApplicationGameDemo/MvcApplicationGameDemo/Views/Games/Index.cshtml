@model IEnumerable<MvcApplicationGameDemo.Models.GameCreateViewModel>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card-deck">
        @foreach (var item in Model)
        {
        <div class="card">
            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Genre)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Developer)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Year)</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
            </div>
         }
        </div>
    </body>
</html>
